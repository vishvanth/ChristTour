<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:fontFamily="sans-serif-light"
        android:text="Categories"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <Button
        android:id="@+id/blocks"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/but"
        android:backgroundTint="@color/buttonblue"
        android:text="Blocks"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/grounds"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/blocks"
        android:layout_alignStart="@+id/blocks"
        android:layout_alignEnd="@+id/blocks"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/but"
        android:backgroundTint="@color/buttonblue"
        android:text="Grounds"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/hangouts"
        android:layout_width="141dp"
        android:layout_height="92dp"
        android:layout_below="@+id/canteens"
        android:layout_alignStart="@+id/canteens"
        android:layout_alignEnd="@+id/canteens"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/but"
        android:backgroundTint="@color/buttonblue"
        android:text="Hangouts"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/theaters"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/grounds"
        android:layout_alignStart="@+id/grounds"
        android:layout_alignEnd="@+id/grounds"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/but"
        android:backgroundTint="@color/buttonblue"
        android:text="Theaters"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/canteens"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/theaters"
        android:layout_alignStart="@+id/theaters"
        android:layout_alignEnd="@+id/theaters"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/but"
        android:backgroundTint="@color/buttonblue"
        android:text="Canteens"
        android:textAllCaps="false"
        android:textSize="18sp" />


</RelativeLayout>