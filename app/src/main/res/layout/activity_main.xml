<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient2"
    tools:context=".MainActivity">

    <!--hello-->

    <ImageView
        android:id="@+id/homeLogo"
        android:layout_width="338dp"
        android:layout_height="137dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:src="@drawable/christ_tras" />

    <ImageView
        android:id="@+id/buttonMapIcon"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_below="@+id/homeLogo"
        android:layout_alignStart="@+id/homeLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/map"
        android:background="@drawable/ripple_effect"/>

    <ImageView
        android:id="@+id/buttonHelpIcon"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_below="@+id/buttonListIcon"
        android:layout_alignEnd="@+id/homeLogo"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ripple_effect"
        android:src="@drawable/help_button" />

    <ImageView
        android:id="@+id/buttonAboutIcon"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_below="@+id/buttonMapIcon"
        android:layout_alignStart="@+id/homeLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/info"
        android:background="@drawable/ripple_effect"/>

    <ImageView
        android:id="@+id/buttonListIcon"
        android:layout_width="106dp"
        android:layout_height="103dp"
        android:layout_below="@+id/homeLogo"
        android:layout_alignEnd="@+id/homeLogo"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/ripple_effect"
        android:src="@drawable/list" />


</RelativeLayout>